@{
    Layout = "_CompanyLayout";
}
@model  IEnumerable<CompanyRequest>;

@{
	if(Model != null && Model.Count() > 0){
		<table class="table table-bordered" style="margin-top:50px">
			<thead>
				<tr>
					<th>Company Name</th>
					<th>College Name</th>
					<th>Interview Date</th>
					<th>Department</th>
					<th>Core Areas</th>
					<th>CGPAPercent</th>
					<th>Comments</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.CompanyName</th>
						<td>@item.CollegeName</td>
						<td>@item.RequestDate.ToShortDateString()</td>
						<td>@item.Department</td>
						<td>@item.CoreAreas</td>
						<td>@item.Percentage</td>
						<td>@item.Comments</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<table class="table table-bordered" style="margin-top:50px">
			<thead>
				<tr>
					<th>Company Name</th>
					<th>College Name</th>
					<th>Interview Date</th>
					<th>Department</th>
					<th>Core Areas</th>
					<th>CGPAPercent</th>
					<th>Comments</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td colspan="7" class="text-center">No Records Found!</td>
				</tr>
			</tbody>
		</table>
	}
}

<input type="button" value="Create a new Placement Request" class="btn btn-primary mt-5" style="float:right" onclick="@("window.location.href='" + @Url.Action("ViewRequests", "Companies") + "'");" />