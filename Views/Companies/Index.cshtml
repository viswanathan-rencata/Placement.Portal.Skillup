@{
    Layout = "_CompanyLayout";
}
@model  IEnumerable<CompanyRequest>;

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Company Name</th>
			<th>College Name</th>
			<th>Request Date</th>
			<th>Department</th>
			<th>Core Areas</th>
			<th>CGPAPercent</th>
			<th>Comments</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.CompanyName</th>
				<td>@item.CollegeName</td>
				<td>@item.RequestDate</td>
				<td>@item.Department</td>
				<td>@item.CoreAreas</td>
				<td>@item.Percentage</td>
				<td>@item.Comments</td>
				<td>
					<a data-value="@item.Id" href="javascript:void(0)" class="btnEdit">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>