@{
    Layout = "_CompanyLayout";
}

@model CompanyRequestViewModel;

<div class="container">
    <div>
        <img src="~/img/company_icon.png" alt="company icon" />
    </div>
    <div class="col-lg-6">
        <div>
            @*@Html.ValidationMessageFor(x=>x.UserNameMatchError)*@

        </div>
        <form asp-action="CompanyRequest" method="post">             
            <br />
            <div class="form-group">
                <label asp-for="CollegeName">College</label>
                <select asp-for="CollegeName" class="form-control">
                    <option value="0">-- Select --</option>
                    <option value="1">Southwest Wisconsin Technical College</option>
                    <option value="2">Lane Community College</option>
                    <option value="3">Brittany Beauty School</option>
                    <option value="4">Paul Mitchell the School-Huntsville</option>
                    <option value="5">Paul Mitchell the School-Arlington</option>
                    <option value="6">Wenatchee Valley College</option>
                    <option value="7">Union College</option>
                    <option value="8">San Joaquin Valley College-Fresno</option>
                    <option value="9">South Piedmont Community College</option>
                    <option value="10">David-Curtis School of Floral Design</option>
                </select>
                <span asp-validation-for="CollegeName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RequestDate">Interview Date</label>
                <input type="date" class="form-control" asp-for="RequestDate" min="2023-01-24" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department">Department</label>
                <select asp-for="Department" class="form-control">
                    <option value="0">-- Select --</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Computer Science">Computer Science</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoreAreas">Core Areas</label>
                <input type="text" class="form-control" asp-for="CoreAreas" />
                <span asp-validation-for="CoreAreas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CGPAPercent">Percentage</label>
                <input type="text" class="form-control" asp-for="CGPAPercent" />
                <span asp-validation-for="CGPAPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments">Comments</label>
                <textarea asp-for="Comments" class="form-control"></textarea>
            </div>
            <input type="button" value="View Placement requests" class="btn btn-primary mt-5" style="float:left" onclick="@("window.location.href='" + @Url.Action("Index", "Companies") + "'");" />
            <button type="submit" style="float:right" class="btn btn-primary mt-5">Submit</button>
            
        </form>
    </div>
</div>