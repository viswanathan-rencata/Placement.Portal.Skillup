@{
    Layout = "_LoginLayout";
}

@model CompanyRequestViewModel;

<div class="container">
    <div>
        <img src="~/img/company_icon.png" alt="company icon" />
    </div>
    <div class="col-lg-6">
        <div>
            @*@Html.ValidationMessageFor(x=>x.UserNameMatchError)*@

        </div>
        <form asp-action="CompanyRequest" method="post">
            <div class="form-group" style="float:right">
               @Html.ActionLink("View Requests","ViewRequests")
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CollegeName">College</label>
                <select asp-for="CollegeName" class="form-control">
                    <option value="0">-- Select --</option>
                    <option value="1">Southwest Wisconsin Technical College</option>
                    <option value="2">Lane Community College</option>
                </select>
                <span asp-validation-for="CollegeName" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RequestDate">Date</label>
                <input type="date" class="form-control" asp-for="RequestDate" value="01/21/2023" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department">Department</label>
                <select asp-for="Department" class="form-control">
                    <option value="0">-- Select --</option>
                    <option value="1">Electronics</option>
                    <option value="2">Computer Science</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoreAreas">Core Areas</label>
                <input type="text" class="form-control" asp-for="CoreAreas" />
                <span asp-validation-for="CoreAreas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CGPAPercent">Percentage</label>
                <input type="text" class="form-control" asp-for="CGPAPercent" />
                <span asp-validation-for="CGPAPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments">Comments</label>
                <textarea asp-for="Comments" class="form-control"></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-5">Submit</button>
        </form>
    </div>
</div>