            <img src="/img/banner.png" alt="companies" class="ml-100" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <a asp-controller="Companies" asp-action="Login">
                <img src="/img/company-collection.png" alt="companies" class="wd-650 ht-570" />
